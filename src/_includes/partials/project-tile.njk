<a href="{{ project.url | url }}" class="block tile mb-10">
    <div class='grid grid-columns-2 grid-rows-2 lg:flex gap-1 lg:h-52 w-full' style="grid-template-rows: 200px 100px;">
        <div class="col-span-2"><img src="{{ project.data.heroImage }}" class="rounded-t-xl lg:rounded-tr-none"/></div>
        {# {% for otherImage in project.data.otherImages %} #}
        <div><img src="{{ project.data.otherImages[0].image }}" class=""/></div>
        <div><img src="{{ project.data.otherImages[1].image }}" class="lg:rounded-tr-xl"/></div>
        {# {% endfor %} #}
    </div>
    <div class="flex flex-col lg:flex-row gap-3 items-center lg:items-end text-center lg:text-left m-5">
        <h6 class="m-0 flex-shrink-0 font-extrabold">{{ project.data.title }}</h6>
        <h6 class="m-0">{{ project.data.description }}</h6>
    </div>
</a>
