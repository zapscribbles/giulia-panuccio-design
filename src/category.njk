---
layout: body
pagination:
    data: categories.data
    size: 1
    alias: category
    addAllPagesToCollections: true
permalink: /portfolio/{{ category.name | slug }}/
---
<h2 class='mt-20 text-center lg:text-left'>{{ category.name }}</h2>
<div class="flex flex-col">
    {% for project in collections.projects %}
        {% if category.name | slug in project.data.categories %}
            {% include "partials/project-tile.njk" %}
        {% endif %}
    {% endfor %}
</div>
